@import "movie_item/movie_item.wxss";

.hot_container {
  padding-top: 100rpx;
}

.hot_nav {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #fff;
  z-index: 1;
}

.hot_nav > text {
  padding: 20rpx;
  font-size: 30rpx;
  margin-bottom: 2px;
}

.nav_btn_cl {
  border-bottom: 2px solid #f13e22;
  color: #f13e22;
}

.hot_nav > .city {
  font-size: 28rpx;
  color: #888;
  border: 0;
  margin-right: 100rpx;
}

.hot_nav > icon {
  padding: 20rpx 30rpx;
  line-height: 14rpx;
  border-left: 1px solid #ccc;
  margin-left: 100rpx;
}

.bottomTips {
  display: block;
  color: #999;
  text-align: center;
  font-size: 28rpx;
  margin: 20rpx 0 60rpx;
}
