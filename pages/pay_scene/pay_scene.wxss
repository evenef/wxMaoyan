.header {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}

.cinemaName {
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.address {
  color: #aaa;
  font-size: 28rpx;
}

.backImg {
  width: 100%;
  height: 380rpx;
  filter: blur(15px) brightness(0.5);
}

.logoImg {
  box-sizing: border-box;
  width: 230rpx;
  height: 320rpx;
  position: absolute;
  top: 30rpx;
  left: 260rpx;
  border: 2px solid #aaa;
}

.movie {
  font-size: 34rpx;
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.movieScore {
  color: orange;
}

.movieScoreIcon {
  color: orange;
  font-size: 22rpx;
}

.movieInfo {
  color: #aaa;
  font-size: 26rpx;
  margin-top: 14rpx;
}

.date {
  font-size: 28rpx;
  padding-bottom: 1px;
  border-bottom: 1px solid #eee;
  background: #fff;
  white-space: nowrap;
}

.date_item {
  display: inline-block;
  padding: 20rpx 30rpx;
}

.date_item_cl {
  border-bottom: 2px solid #f13e22;
  color: #f13e22;
}

.sceneItem {
  margin: 0 30rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.sceneItem > view {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.startTime {
  font-size: 44rpx;
}

.language {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.downText {
  font-size: 24rpx;
  color: #aaa;
}

.price {
  font-size: 40rpx;
  color: #f13e22;
}

.price_icon {
  font-size: 22rpx;
}
